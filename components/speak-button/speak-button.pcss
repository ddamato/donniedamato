.speak-button {
  cursor: pointer;
  background-color: transparent;
  vertical-align: middle;
  border: 0;
  height: 1.5em;
  width: 1.5em;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  background-image: url("data:image/svg+xml;base64,");
  overflow: hidden;
  color: transparent;
}

.speak-button:focus {
  outline: 0;
}