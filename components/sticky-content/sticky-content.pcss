@import url('https://fonts.googleapis.com/css2?family=Permanent+Marker&display=swap');

.sticky-content {
  font-family: 'Permanent Marker';
	text-align: center;
	font-size: min(3.5rem, 12vw);
	user-select: none;
	display: flex;
	justify-content: center;
	align-items: center;
	min-height: 15rem;
	width: 100%;
	padding: 1rem;
	margin: auto;
	box-sizing: border-box;
}