<!doctype html>
<html lang="en">
  <head>
    {% include "head.njk" %}
  </head>
  <body>
    <main class="main">
      <div class="splash max-width drop-shadow">
        {% include "splash.njk" %}
      </div>
      <div class="carousel max-width drop-shadow">
        {% include "carousel.njk" %}
      </div>
      <div class="projects max-width drop-shadow">
        {% include "projects.njk" %}
      </div>
    </main>
    <footer class="footer">
      <div class="footer-content max-width">
         {% include "footer.njk" %}
      </div>
    </footer>
    <script>
      window.addEventListener('scroll', (ev) => {
        document.body.style.setProperty('--hue', 174 + Math.floor(window.pageYOffset / 30));
      });
    </script>
  </body>
</html>